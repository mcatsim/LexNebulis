# LexNebulis Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# GENERAL
# =============================================================================
COMPOSE_PROJECT_NAME=lexnebulis
DOMAIN=localhost
ENVIRONMENT=production

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=lexnebulis
POSTGRES_PASSWORD=CHANGE_ME_postgres_password
POSTGRES_DB=lexnebulis
DATABASE_URL=postgresql+asyncpg://lexnebulis:CHANGE_ME_postgres_password@db:5432/lexnebulis

# =============================================================================
# BACKEND (FastAPI)
# =============================================================================
SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_64
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BACKEND_CORS_ORIGINS=["https://localhost"]
FIRST_ADMIN_EMAIL=admin@example.com
FIRST_ADMIN_PASSWORD=CHANGE_ME_admin_password

# =============================================================================
# MINIO (S3-Compatible File Storage)
# =============================================================================
MINIO_ROOT_USER=lexnebulis
MINIO_ROOT_PASSWORD=CHANGE_ME_minio_password
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=lexnebulis-documents
MINIO_USE_SSL=false

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# ENCRYPTION
# =============================================================================
FIELD_ENCRYPTION_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32

# =============================================================================
# NGINX / TLS
# =============================================================================
# Set to true if you have TLS certificates in ./nginx/certs/
ENABLE_TLS=false
# TLS_CERT_PATH=/etc/nginx/certs/fullchain.pem
# TLS_KEY_PATH=/etc/nginx/certs/privkey.pem

# =============================================================================
# BACKUP
# =============================================================================
BACKUP_ENCRYPTION_KEY=CHANGE_ME_backup_encryption_key
BACKUP_DIR=./backups
